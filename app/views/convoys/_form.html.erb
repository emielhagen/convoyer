<div class="form">
  <%= simple_form_for @convoy  do |f| %>
    <%= f.hidden_field  :user_id, value: current_user.id  %>
    <%= f.input :name, label: "Make up a cool name for your convoy" %>
    <%= f.input :fwd_only, label: "Is it only suitable for 4WD's?" %>
    <%= f.input :start_date, as: :string, label: "When do you want to depart?", input_html: { class: "datepicker" }  %>
    <%= f.input :finish_date, as: :string, label: "When will you arrive?", input_html: { class: "datepicker" } %>
    <%= f.input :to_location, as: :string, label: "To location" %>
    <%= f.input :from_location, as: :string, label: "From location" %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit, class: 'btn-black' %>
  <% end %>
</div>

